{
  "name": "lt-modal",
  "version": "1.0.1",
  "description": "A lightweight modal component for React",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/okafrancois/lt-modal.git"
  },
  "homepage": "https://github.com/okafrancois/lt-modal.git",
  "author": "Berny Itoutou",
  "keywords": [
    "react",
    "modal",
    "component",
    "hd",
    "hd-modal"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/lt-modal.umd.js",
  "module": "./dist/hd-modal.es.js",
  "exports": {
    ".": {
      "import": "./dist/lt-modal.es.js",
      "require": "./dist/lt-modal.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^8.20.0",
    "@testing-library/react": "^13.4.0",
    "@vitejs/plugin-react": "^3.0.1",
    "c8": "^7.12.0",
    "eslint": "^8.32.0",
    "eslint-plugin-react": "^7.32.1",
    "jsdom": "^21.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "tslib": "^2.4.1",
    "vite": "^4.0.4",
    "vite-plugin-typescript": "^1.0.4",
    "vitest": "^0.28.1"
  }
}
